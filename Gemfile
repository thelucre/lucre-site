# This is really all just for sass/compass
gem 'sass'
gem 'compass', '~> 1.0'

# Lets you do more string operations in sass
gem 'sassy-strings'

# Generates 1px transparent pngs for IE8 which doesn't support rgba()
gem 'compass-rgbapng'

# Supposedly faster sprite generation
gem 'oily_png'

# Allows wildcarding SASS directories
gem 'sass-globbing'

# Allows you to load CSS files into SASS
gem 'sass-css-importer'

# Adds easings to compas
gem 'ceaser-easing'

# Capistrano
gem 'capistrano', '~> 3.2.0'
gem 'hipchat'